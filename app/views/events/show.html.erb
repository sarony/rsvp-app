<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<p>
  <strong>Invites Sent To:</strong>
  <% @invites = @event.invites.collect do |invite| %>
  <% invite.name %>
  <% end %>
  <%= @invites.to_sentence %>
</p>

<%= link_to 'Edit Event', edit_event_path(@event) %> |
<%= link_to 'Send More Invites', new_event_invite_path(@event) %> |
<%= link_to 'Back', events_path %>
